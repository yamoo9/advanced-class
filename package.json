{
  "config": {
    "base": "advanced-class",
    "input": "src",
    "output": "docs",
    "assets": "assets",
    "styles": "postcss",
    "bundle_styles": "styles",
    "pages": "pages",
    "has_preview": true,
    "preview": "preview",
    "svg": {
      "input": "src/assets/svg",
      "output": "src/assets/sprites",
      "filename": "stack"
    }
  },
  "browserslist": [
    "last 2 versions"
  ],
  "scripts": {
    "transform:css": "postcss src/postcss/learn -d src/postcss/output --env development",
    "watch:css": "pnpm transform:css --watch",
    "build:css": "pnpm transform:css --env production",
    "multi-entry:css": "postcss src/postcss/learn/main.css src/postcss/learn/pages/**/*.css -d src/postcss/output --base src/postcss/learn",
    
    "dev": "run-p watch:*",
    "watch:serve": "browser-sync $npm_package_config_input --port 3000 --watch --no-notify --no-open",
    "build": "run-s cleanup build:gulp",
    "build:gulp": "gulp build",
    "preview": "browser-sync preview --startPath $npm_package_config_base --port 3001 --no-notify --no-open --no-ui",
    "cleanup": "rimraf -rf docs preview $npm_package_config_base/$npm_package_config_bundle_styles",
    "svg": "gulp svg",
    "watch:svg": "gulp watchSvg"
  },
  "devDependencies": {
    "@types/gulp": "4.0.17",
    "@types/node": "20.9.1",
    "browser-sync": "2.29.3",
    "gulp": "4.0.2",
    "gulp-cli": "2.3.0",
    "gulp-concat-css": "3.1.0",
    "gulp-htmlmin": "5.0.1",
    "gulp-if": "3.0.0",
    "gulp-imagemin": "7.1.0",
    "gulp-replace": "1.1.4",
    "gulp-stacksvg": "3.0.0",
    "gulp-watch": "5.0.1",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.31",
    "postcss-cli": "10.1.0",
    "rimraf": "5.0.5"
  }
}